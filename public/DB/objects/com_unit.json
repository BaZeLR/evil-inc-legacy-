        {
          "cmdtype": "CT_DISPLAYPICTURE",
          "CommandPart2": "Assets/images/objects/com_unit.mp4"
        },
        {
          "cmdtype": "CT_SETVARIABLE",
          "CommandPart2": "player.Stats.Energy",
          "CommandPart3": "Equals",
          "CommandPart4": "{player.Stats.MaxEnergy}"
